{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "prettier --list-different \"./packages/*/src/**/*.{js,ts}\" && lerna run build",
    "lint": "prettier --write \"./packages/*/src/**/*.{js,ts}\""
  },
  "devDependencies": {
    "lerna": "^3.2.1",
    "prettier": "1.14.2"
  }
}
