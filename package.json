{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "prettier --single-quote --trailing-comma \"all\" --write \"./packages/*/src/**/*.{js,ts,md}\" && lerna run build"
  },
  "devDependencies": {
    "lerna": "^3.2.1",
    "prettier": "1.14.2"
  }
}
