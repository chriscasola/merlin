{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=8",
    "npm": ">=6"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "lint": "lerna run lint --stream",
    "lint-fix": "lerna run lint-fix --stream",
    "docs": "typedoc --tsconfig tsconfig.base.json packages/",
    "update-snapshots": "lerna run update-snapshots --stream",
    "merl": "node ./packages/cli/src/index.js"
  },
  "devDependencies": {
    "@types/find-up": "^2.1.1",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "@types/p-map": "^1.1.0",
    "@types/rimraf": "^2.0.2",
    "jest": "^23.5.0",
    "lerna": "^3.2.1",
    "memfs": "~2.9.4",
    "prettier": "1.15.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^26.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typedoc": "^0.13.0",
    "typedoc-plugin-monorepo": "^0.1.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@merl/cli": "file:packages/cli",
    "@merl/git": "file:packages/git",
    "@merl/util": "file:packages/util",
    "@merl/web": "file:packages/web"
  }
}
